<!DOCTYPE html>
<html>

<head>
  <title>CORE - Forgot Password</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="css/navbar.css" />
  <link rel="stylesheet" href="css/login.css" />
  <link rel="shortcut icon" href="/img/core.png" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<style>
  .account-stuff {
    padding: 15px 13px !important;
    box-sizing: border-box;
  }

  .user-res {
    margin-bottom: .4rem;
  }

  .account-stuff {
    padding: 15px 0;
  }

  .account-stuff h3 {
    margin-bottom: .7rem;
  }
</style>

<body>
  <%- include('partials/navbar', { pagePath: 'home' }) %>
  <main>
    <img src="/img/core.png" onclick="window.location.href = '/'" alt="CORE Logo" class="core-logo" />

    <div class="account-stuff">
      <h3 class="font-semibold tracking-tight text-2xl">Forgot Password</h3>
      <% if (errorMessages && errorMessages.length > 0) { %>
      <div class="error-messages">
        <% errorMessages.forEach(function(msg) { %>
        <p class="error-message"><%= msg %></p>
        <% }); %>
      </div>
      <% } %>
      <% if (successMessages && successMessages.length > 0) { %>
      <div class="success-messages">
        <% successMessages.forEach(function(msg) { %>
        <p class="success-message"><%= msg %></p>
        <% }); %>
      </div>
      <% } %>
      <div class="user-res">
        <p class="text-sm text-muted-foreground">Remember your password? <a href=" /login">Login</a></p>
      </div>
      <form class="input-container" action="/reset-password" method="POST">
        <input type="email" class="flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:cursor-not-allowed disabled:opacity-50 flex-1" name="email" placeholder="Email" required>
        <button class="inline-flex mb-4 items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-9 px-4 py-2 w-full" type="submit">Reset Password</button>
      </form>
    </div>
    <%- include('partials/footer') %>

  </main>
</body>

</html>
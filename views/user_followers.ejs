<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="stylesheet" href="/css/navbar.css" />
  <link rel="stylesheet" href="/css/user_profile.css" />
  <link rel="shortcut icon" href="/img/core.png" />
</head>

<style>
  main {
    display: flex;
  }

  .followers {
    max-width: 800px;
    border: 1px solid var(--border-color);
    border-radius: 10px;
    width: 100%;
    background: var(--light-mode-body-color);
  }

  .follower {
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 10px;
    border-bottom: 1px solid var(--border-color);
    width: 100%;
    padding: 10px 13px;
  }

  .follower:last-child {
    border-bottom: none;
  }

  .follower:hover {
    background-color: var(--light-mode-hover-color);
    cursor: pointer;
  }

  .followers-header {
    margin: 13px 10px;
    margin-top: 1.7rem;
    margin-bottom: 1.3rem;
  }

  @media (prefers-color-scheme: dark) {
    .followers {
      border-color: var(--dark-mode-border-color);
      background-color: var(--dark-mode-body-color);
    }

    .follower {
      border-color: var(--dark-mode-border-color);
    }

    .follower:hover {
      background-color: var(--dark-mode-hover-background-color);
    }
  }

  @media screen and (max-width: 768px) {
    main {
      display: block;
    }
  }
</style>

<body>
  <%- include('partials/navbar', { pagePath: 'updates' }) %>
  <main>
    <h5 class="followers-header">Followers</h5>
    <div class="followers">
      <% followers.forEach((follower) => { %>
      <div class="follower" onclick="window.location.href='/user/<%= follower.username %>'">
        <img class="thumbnail thumbnail-regular thumbnail-tiny" src="<%= follower.avatar %>" alt="<%= follower.username %>" />
        <div class="follower-info">
          <p class="main-text">
            <%= follower.firstname %>
            <%= follower.lastname %>
          </p>
          <p class="sub-text secondary-textx">
            @<%= follower.username.toLowerCase() %>
          </p>
        </div>
      </div>
      <% }) %>
    </div>
  </main>
</body>

</html>
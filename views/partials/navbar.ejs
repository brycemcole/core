<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
<script>
  const searchBar = document.getElementById('search-bar');
  const searchResults = document.getElementById('search-results');
  const searchForm = document.getElementById('search-form');

  let debounceTimer;

  searchBar.addEventListener('input', function () {
    clearTimeout(debounceTimer);
    debounceTimer = setTimeout(() => {
      const searchTerm = this.value.trim();
      if (searchTerm.length > 1) {
        fetchAutocompleteResults(searchTerm);
      } else {
        searchResults.style.display = 'none';
      }
    }, 300);
  });

  searchForm.addEventListener('submit', function (e) {
    e.preventDefault();
    const searchTerm = searchBar.value.trim();
    if (searchTerm) {
      window.location.href = `/search?searchTerm=${encodeURIComponent(searchTerm)}`;
    }
  });

  async function fetchAutocompleteResults(searchTerm) {
    try {
      const response = await axios.get(`/autocomplete/all?term=${encodeURIComponent(searchTerm)}`);
      const data = response.data;
      console.log(data);
      displayAutocompleteResults(data);
    } catch (error) {
      console.error('Error fetching autocomplete results:', error);
    }
  }

  function displayAutocompleteResults(data) {
    searchResults.innerHTML = '';
    let resultsHtml = '';

    // Display top results (assuming 3 from each category)
    const categories = ['users', 'posts', 'jobs', 'communities', 'companies'];
    categories.forEach(category => {
      const items = data[category].slice(0, 3);
      items.forEach(item => {
        let name = item.name || item.title || item.firstname + ' ' + item.lastname || item.username;

        if (!name) {
          name = item.username;
        }

        let id = category === 'users' ? item.username : item.id;
        resultsHtml += `
        <div data-id="${id}" data-category="${category}" class="search-result-item">
        <img src="${item.avatar || item.logo || '/img/glyph.png'}" alt="Avatar" class="thumbnail thumbnail-regular thumbnail-micro" />
        ${name}
        </div>`;
      });
    });

    // Add category options
    resultsHtml += `
                <div class="search-categories">
                    <span class="search-category" data-category="posts">Posts</span>
                    <span class="search-category" data-category="companies">Companies</span>
                    <span class="search-category" data-category="users">Users</span>
                    <span class="search-category" data-category="jobs">Jobs</span>
                </div>
            `;

    searchResults.innerHTML = resultsHtml;
    searchResults.style.display = 'block';

    // Add event listeners for category options
    document.querySelectorAll('.search-category').forEach(category => {
      category.addEventListener('click', function () {
        const selectedCategory = this.getAttribute('data-category');
        window.location.href = `/search?searchTerm=${encodeURIComponent(searchBar.value)}&category=${selectedCategory}`;
      });
    });

    // Add event listeners for result items
    document.querySelectorAll('.search-result-item').forEach(item => {
      item.addEventListener('click', function () {
        const id = this.getAttribute('data-id');
        const name = this.textContent;
        const category = this.getAttribute('data-category');
        let url = '';
        if (category === 'users') {
          url = `/user/${id}`;
        } else if (category === 'posts') {
          url = `/posts/${id}`;
        } else if (category === 'jobs') {
          url = `/jobs/${id}`;
        } else if (category === 'communities') {
          url = `/networks/${id}`;
        } else if (category === 'companies') {
          url = `/jobs/company/${encodeURIComponent(name.trim())}`;
        }
        window.location.href = url;
      });
    });
  }

  // Close search results when clicking outside
  document.addEventListener('click', function (event) {
    if (!searchBar.contains(event.target) && !searchResults.contains(event.target)) {
      searchResults.style.display = 'none';
    }
  });

  function checkFollowing(userId) {
    fetch(`/users/${userId}/is-following`)
      .then(response => response.json())
      .then(data => {
        const followButton = document.querySelector(`button[onclick="followUser('${userId}')"]`);
        if (followButton) {
          if (data.isFollowing) {
            followButton.innerHTML = '<span class="material-symbols-outlined">close</span><p class="bold">Unfollow</p>';
            followButton.classList.remove('submit-button-normal');
            followButton.classList.add('cancel-button-normal');
          } else {
            followButton.innerHTML = '<span class="material-symbols-outlined">person_add</span><p class="bold">Follow</p>';
            followButton.classList.remove('cancel-button-normal');
            followButton.classList.add('submit-button-normal');
          }
        }
      })
      .catch(error => {
        console.error('Error checking follow status:', error);
      });
  }

  function followUser(username) {
    fetch(`/users/${username}/follow`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      })
      .then(response => response.json())
      .then(data => {
        if (data) {
          const followButton = document.querySelector(`button[onclick="followUser('${username}')"]`);
          if (data.following === true) {
            showBannerNotification('User followed successfully');
            followButton.innerHTML = '<span class="material-symbols-outlined">close</span>Unfollow';
          } else {
            showBannerNotification('User unfollowed successfully');
            followButton.innerHTML = '<span class="material-symbols-outlined">person_add</span>Follow';

          }
        }
      })
      .catch(error => {
        console.error('Error:', error);
        showBannerNotification('An error occurred while following user');
      });
  }

  async function share(title, text, url, type = null, id = null) {
    const shareData = {
      title,
      text,
      url
    };

    try {
      if (type && id) {
        const response = await fetch(`/api/${type}/${id}/share`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
        });
        if (!response.ok) throw new Error('Failed to increment share count');
        const data = await response.json();
        console.log(`${type.charAt(0).toUpperCase() + type.slice(1)} share count updated:`, data.newShareCount);
      }

      if (navigator.share) {
        await navigator.share(shareData);
        console.log('Content shared successfully');
      } else if (navigator.clipboard && navigator.clipboard.writeText) {
        await navigator.clipboard.writeText(url);
        alert('Content URL copied to clipboard!');
      } else {
        const textArea = document.createElement('textarea');
        textArea.value = url;
        textArea.style.cssText = 'position:fixed;opacity:0;';
        document.body.appendChild(textArea);
        textArea.focus();
        textArea.select();
        const successful = document.execCommand('copy');
        document.body.removeChild(textArea);
        if (!successful) throw new Error('Failed to copy');
        alert('Content URL copied to clipboard!');
      }
    } catch (error) {
      console.error('Error sharing content:', error);
    }
  }

  let bannerTimeout;

  function showBannerNotification(message, duration = 7000) {
    const banner = document.getElementById("latestCommitBanner");
    const messageElement = banner.querySelector(".latest-commit-message");

    messageElement.textContent = message;
    banner.style.display = "block"; // Show the banner

    // Clear any existing timeout
    if (bannerTimeout) {
      clearTimeout(bannerTimeout);
    }

    // Set up auto-hide if duration is provided
    if (duration > 0) {
      bannerTimeout = setTimeout(() => {
        hideBanner();
      }, duration);
    }

    // Add click event listener to the banner itself for manual dismissal
    banner.onclick = hideBanner;
  }

  function hideBanner() {
    const banner = document.getElementById("latestCommitBanner");
    banner.style.display = "none";

    // Remove the click event listener from the banner
    banner.onclick = null;

    // Clear the timeout if it exists
    if (bannerTimeout) {
      clearTimeout(bannerTimeout);
    }
  }


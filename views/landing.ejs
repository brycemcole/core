    <section class="cta-section">
      <h2>Ready to Take the Next Step?</h2>
      <a href="/register">
        <button class="regular-button centered-button">
          Join CORE
          <span class="material-symbols-outlined">
            arrow_forward
          </span>
        </button>
      </a>
    </section>
  </main>

  <%- include('partials/footer') %>

</body>

</html>
<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="stylesheet" href="/css/navbar.css" />
  <link rel="stylesheet" href="/css/user_profile.css" />
  <link rel="shortcut icon" href="/img/core.png" />
</head>

<style>
  main {
    display: block;
    overflow-y: auto;
  }


  .hidden-tags {
    display: none;
    margin-top: 5px;
  }

  .community-flair {
    padding: 2px 5px;
    border-radius: 5px;
    color: white;
    font-size: 12px;
    margin-right: 5px;
  }

  .community-flairs {
    display: flex;
    gap: .4rem;
    align-items: center;
  }

  .community-flairs div {
    display: flex;
    align-items: center;
  }

  .communities-header {
    margin: 13px 10px;
    margin-top: 1.6rem;
    margin-bottom: 0.8rem;
  }

  .community-entry {
    border-top: 1px solid var(--border-color);
    padding: .6rem 1.4rem;
    padding-left: 2.4rem;
    display: flex;
    cursor: pointer;
    flex-direction: column;
  }


  .community-entry:last-child {
    border-bottom: 1px solid var(--border-color);
  }

  .community-info {
    display: flex;
    align-items: center;
    gap: .6rem;
  }

  .community-entry .material-symbols-outlined {
    font-size: 20px;
    margin-right: 10px;
  }

  @media (prefers-color-scheme: dark) {
    .community-entry {
      background-color: var(--dark-mode-body-color);
      border-color: var(--dark-mode-main-color);
    }

    .community-flair {
      background-color: var(--dark-mode-lighter-color);
    }

    .community-entry:hover {
      background-color: var(--dark-mode-hover-background-color);
    }

    .community-entry:last-child {
      border-color: var(--dark-mode-main-color);
    }
</style>

<body>
  <%- include('partials/navbar', { pagePath: 'communities' }) %>
  <main>

    <% if (user && user.isAdmin) { %>
    <h5 class="communities-header secondary-text">Admin Networks</h5>
    <div class="communities-list">
      <% communities.forEach((community) => { %>
      <% if (community.id == 9) { %>
      <div class="community-entry" onclick="window.location.href='/networks/<%= community.shortname %>'">
        <span class="material-symbols-outlined" style="color:<%= community.community_color %>;"><%= community.mini_icon %></span>

        <span class="community-info">
          <span class="community-info-title">FeedbackChannel</span>
          <br>
          <span class="community-flairs">
            <span class="community-flair" style="background-color:<%= community.community_color %>85;"><%= community.PostCount[1]%> posts</span>

          </span>
        </span>
      </div>
      <% } %>
      <% }) %>
    </div>
    <% } %>


    <% if (user) { %>
    <h5 class="communities-header secondary-text">Joined Networks</h5>
    <div class="communities-list">
      <% communities.forEach((community) => { %>
      <% if (community.id == 9 || community.PrivacySetting == 'Private') { %>
      <% return; %>
      <% } %>
      <% if (community.isMember) { %>
      <div class="community-entry" onclick="window.location.href='/networks/<%= community.shortname %>'">
        <span class="material-symbols-outlined" style="color:<%= community.community_color %>;"><%= community.mini_icon %></span>
        <span class="community-info">
          <span class="community-info-title"><%= community.name%>
            <span> - </span>
            /<%= community.shortname%>
          </span>
          <% if (community.isModerator) { %>
          <span class="material-symbols-outlined" style="font-size: 16px;" onclick="window.location.href='/networks/<%= community.shortname %>/admin'">admin_panel_settings</span>
          <% } %>
          <br>
          <span class="community-flairs">
            <span class="community-flair" style="background-color:<%= community.community_color %>85;"><%= community.CommunityMemberCount%> member</span>
            <span class="community-flair" style="background-color:<%= community.community_color %>85;"><%= community.PostCount[1]%> posts</span>

          </span>
        </span>
        <span class="material-symbols-outlined" style="margin-left: auto;" onclick="leaveCommunity(event, '<%= community.shortname %>')">close</span>
      </div>
      <% } %>
      <% }) %>
    </div>
    <% } %>

    <h5 class="communities-header secondary-text">Explore Networks</h5>
    <div class="communities-list">
      <% communities.forEach((community) => { %>
      <% if (community.id == 9 || community.PrivacySetting == 'Private') { %>
      <% return; %>
      <% } %>

      <% if (!community.isMember) { %>
      <div class="community-entry" onclick="window.location.href='/networks/<%= community.shortname %>'">

        <div class="community-info margin-06-bottom">
          <span class="material-symbols-outlined" style="padding:0;margin:0;font-size: 1.1rem;color:<%= community.community_color %>;"><%= community.mini_icon %></span>

          <span class="community-info-title" style="color:<%= community.community_color %>;">
            <span class="main-text bold">
              <%= community.name%>
              /<%= community.shortname%>
            </span>
          </span>
        </div>
        <div class="community-body margin-03-bottom">
          <span class="community-body sub-text" id="secondary-text"><%= community.description%></span>
        </div>
        <div class="community-tags margin-03-bottom secondary-text sub-text">
          <%= community.Tags%>

        </div>

        <div class="community-flairs secondary-text sub-text">
          <div>
            <span class="material-symbols-outlined" style="padding:0;margin:0;vertical-align:-2px;font-size: 1.1rem;">person</span>
            <%= community.MemberCount%>
          </div>
          <span style="font-size:.7rem;">â€¢</span>
          <div>
            <span class="material-symbols-outlined" style="padding:0;margin:0;vertical-align:-2px;font-size: 1.1rem;">description</span>
            <%= community.PostCount[1]%>
          </div>

        </div>

        <% if (user) { %>
        <% if (community.isModerator) { %>
        <span class="material-symbols-outlined" style="margin-left: 10px;">star</span>
        <% } %>
        <% } %>
      </div>
      <% } %>
      <% }) %>
    </div>
    <%- include('partials/footer') %>

  </main>
  <script>
    function renderTags(tagsString, initialTagCount = 3) {
      const tags = tagsString.split(',').map(tag => tag.trim());
      const visibleTags = tags.slice(0, initialTagCount);
      const hiddenTags = tags.slice(initialTagCount);

      let html = '<div class="tags-container">';

      // Render visible tags
      visibleTags.forEach(tag => {
        html += `<span class="tag">${tag}</span>`;
      });

      // Render hidden tags and toggle button if there are any
      if (hiddenTags.length > 0) {
        html += `<span class="tag-toggle" onclick="toggleHiddenTags(event, this)">+${hiddenTags.length} more</span>`;
        html += '<div class="hidden-tags" style="display: none;">';
        hiddenTags.forEach(tag => {
          html += `<span class="tag">${tag}</span>`;
        });
        html += '</div>';
      }

      html += '</div>';

      return html;
    }

    // Function to toggle hidden tags
    function toggleHiddenTags(event, element) {
      event.stopPropagation();
      const hiddenTags = element.nextElementSibling;
      const isHidden = hiddenTags.style.display === 'none';
      hiddenTags.style.display = isHidden ? 'inline' : 'none';
      element.textContent = isHidden ? 'Show less' : `+${hiddenTags.children.length} more`;
    }

    async function leaveCommunity(event, community_name) {
      event.stopPropagation();
      const response = await fetch(`/networks/${community_name}/leave`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        }
      });

      if (response.ok) {
        window.location.reload();
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      const communityTags = document.querySelectorAll('.community-tags');
      communityTags.forEach((tagContainer) => {
        const tagsString = tagContainer.textContent;
        tagContainer.innerHTML = renderTags(tagsString);
      });
    });

    async function joinCommunity(event, community_shortname) {
      event.stopPropagation();
      const response = await fetch(`/networks/${community_shortname}/join`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        }
      });

      if (response.ok) {
        window.location.reload();
      }
    }
  </script>

</body>

</html>